<UserControl
  x:Class="TaskbarFlyout.Uwp.FlyoutContentControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
  d:DesignHeight="400"
  d:DesignWidth="400"
  RequestedTheme="Light"
  mc:Ignorable="d">

  <Grid>
    <Button
      Width="1"
      Height="1"
      Margin="-50,-50,0,0" />
    <StackPanel
      Width="400"
      Height="400"
      Padding="16">
      <TextBlock
        Margin="0,0,0,10"
        CharacterSpacing="-20"
        FontSize="26"
        FontWeight="SemiBold"
        Text="Hello world!" />
      <Slider Margin="0,0,0,10" />
      <RadioButton
        Margin="0,0,0,5"
        Content="Option 1"
        GroupName="RadioName" />
      <RadioButton
        Margin="0,0,0,10"
        Content="Option 2"
        GroupName="RadioName" />
      <muxc:NumberBox
        Width="200"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
        SpinButtonPlacementMode="Inline"
        Value="11" />
      <ToggleSwitch Margin="0,0,0,10" IsOn="True" />
      <CalendarDatePicker Margin="0,0,0,10" />
      <muxc:RatingControl
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
        Value="4" />
      <TextBox Text="WPF + UWP" />
    </StackPanel>
  </Grid>
</UserControl>
<UserControl x:Class="ModernFlyouts.SessionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.modernwpf.com/2019" xmlns:local="clr-namespace:ModernFlyouts"
             mc:Ignorable="d"
             d:DesignHeight="138" d:DesignWidth="354"
             MaxWidth="{DynamicResource FlyoutWidth}" DataContext="{x:Static local:FlyoutHandler.Instance}">
    <UserControl.Resources>
        
        <!--region: ScrollViewer-->

        <ControlTemplate x:Key="SecondaryContentScrollBarButtonTemplate" TargetType="Button">
            <Border x:Name="Root" CornerRadius="{TemplateBinding ui:ControlHelper.CornerRadius}"
                    Background="{DynamicResource ScrollBarButtonBackground}"
                    BorderBrush="{DynamicResource ScrollBarButtonBorderBrush}"
                    SnapsToDevicePixels="True">
                <ui:FontIconFallback
                        x:Name="Arrow"
                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                        Data="{TemplateBinding Content}"
                        Foreground="{DynamicResource ScrollBarButtonArrowForeground}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Root" Property="Background" Value="{DynamicResource ScrollBarButtonBackgroundPointerOver}" />
                    <Setter TargetName="Root" Property="BorderBrush" Value="{DynamicResource ScrollBarButtonBorderBrushPointerOver}" />
                    <Setter TargetName="Arrow" Property="Foreground" Value="{DynamicResource ScrollBarButtonArrowForegroundPointerOver}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="Root" Property="Background" Value="{DynamicResource ScrollBarButtonBackgroundPressed}" />
                    <Setter TargetName="Root" Property="BorderBrush" Value="{DynamicResource ScrollBarButtonBorderBrushPressed}" />
                    <Setter TargetName="Arrow" Property="Foreground" Value="{DynamicResource ScrollBarButtonArrowForegroundPressed}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="SecondaryContentScrollBarStyleVertical" TargetType="ScrollBar">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <ControlTemplate.Resources>
                            <StreamGeometry x:Key="ChevronDown">M 18.935547 4.560547 L 19.814453 5.439453 L 10 15.253906 L 0.185547 5.439453 L 1.064453 4.560547 L 10 13.496094 Z</StreamGeometry>
                            <StreamGeometry x:Key="ChevronUp">M 19.091797 14.970703 L 10 5.888672 L 0.908203 14.970703 L 0.029297 14.091797 L 10 4.111328 L 19.970703 14.091797 Z</StreamGeometry>
                        </ControlTemplate.Resources>
                        <Border x:Name="Root" SnapsToDevicePixels="true">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Button x:Name="PART_LineUpButton"
                                        Command="{x:Static ScrollBar.LineUpCommand}"
                                        Height="20" Width="40"
                                        IsTabStop="False"
                                        Margin="0"
                                        Grid.Row="0"
                                        ui:ControlHelper.CornerRadius="0,0,4,4"
                                        Template="{StaticResource SecondaryContentScrollBarButtonTemplate}"
                                        Content="{StaticResource ChevronUp}"
                                        HorizontalAlignment="Center">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource ScrollButtonVisibilityConverter}" ConverterParameter="&gt;">
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Value" />
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Minimum" />
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                                <Button x:Name="PART_LineDownButton"
                                        Command="{x:Static ScrollBar.LineDownCommand}"
                                        Height="20" Width="40"
                                        IsTabStop="False"
                                        Margin="0"
                                        Grid.Row="2"
                                        ui:ControlHelper.CornerRadius="4,4,0,0"
                                        Template="{StaticResource SecondaryContentScrollBarButtonTemplate}"
                                        Content="{StaticResource ChevronDown}"
                                        HorizontalAlignment="Center">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource ScrollButtonVisibilityConverter}" ConverterParameter="&lt;">
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Value" />
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Maximum" />
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryContentScrollBarStyleHorizontal" TargetType="ScrollBar">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <ControlTemplate.Resources>
                            <StreamGeometry x:Key="ChevronLeft">M 14.091797 19.970703 L 4.111328 10 L 14.091797 0.029297 L 14.970703 0.908203 L 5.888672 10 L 14.970703 19.091797 Z</StreamGeometry>
                            <StreamGeometry x:Key="ChevronRight">M 5.029297 19.091797 L 14.111328 10 L 5.029297 0.908203 L 5.908203 0.029297 L 15.888672 10 L 5.908203 19.970703 Z</StreamGeometry>
                        </ControlTemplate.Resources>
                        <Border x:Name="Root" SnapsToDevicePixels="true">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PART_LineLeftButton"
                                        Command="{x:Static ScrollBar.LineLeftCommand}"
                                        Height="40" Width="20"
                                        IsTabStop="False"
                                        Margin="0"
                                        Grid.Column="0"
                                        ui:ControlHelper.CornerRadius="0,4,4,0"
                                        Template="{StaticResource SecondaryContentScrollBarButtonTemplate}"
                                        Content="{StaticResource ChevronLeft}"
                                        VerticalAlignment="Center">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource ScrollButtonVisibilityConverter}" ConverterParameter="&gt;">
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Value" />
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Minimum" />
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                                <Button x:Name="PART_LineRightButton"
                                        Command="{x:Static ScrollBar.LineRightCommand}"
                                        Height="40" Width="20"
                                        IsTabStop="False"
                                        Margin="0"
                                        Grid.Column="2"
                                        ui:ControlHelper.CornerRadius="4,0,0,4"
                                        Template="{StaticResource SecondaryContentScrollBarButtonTemplate}"
                                        Content="{StaticResource ChevronRight}"
                                        VerticalAlignment="Center">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource ScrollButtonVisibilityConverter}" ConverterParameter="&lt;">
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Value" />
                                            <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Maximum" />
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryContentScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="ui:ControlHelper.CornerRadius" Value="{DynamicResource FlyoutCornerRadius}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Border CornerRadius="{TemplateBinding ui:ControlHelper.CornerRadius}">
                            <Grid Background="{TemplateBinding Background}">
                                <ScrollContentPresenter
                                    x:Name="PART_ScrollContentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    CanContentScroll="{TemplateBinding CanContentScroll}"
                                    CanHorizontallyScroll="False"
                                    CanVerticallyScroll="False"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}" />
                                <ScrollBar
                                    x:Name="PART_HorizontalScrollBar" Style="{StaticResource SecondaryContentScrollBarStyleHorizontal}"
                                    AutomationProperties.AutomationId="HorizontalScrollBar"
                                    Maximum="{TemplateBinding ScrollableWidth}"
                                    Minimum="0" VerticalAlignment="Stretch"
                                    ViewportSize="{TemplateBinding ViewportWidth}"
                                    Orientation="Horizontal"
                                    Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                    Value="{TemplateBinding HorizontalOffset}" />
                                <ScrollBar
                                    x:Name="PART_VerticalScrollBar" Style="{StaticResource SecondaryContentScrollBarStyleVertical}"
                                    AutomationProperties.AutomationId="VerticalScrollBar"
                                    Maximum="{TemplateBinding ScrollableHeight}"
                                    Minimum="0" HorizontalAlignment="Stretch"
                                    ViewportSize="{TemplateBinding ViewportHeight}"
                                    Orientation="Vertical"
                                    Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                    Value="{TemplateBinding VerticalOffset}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--endregion-->
        
    </UserControl.Resources>
    
    <ScrollViewer x:Name="ContentScrollViewer" MaxHeight="{Binding UIManager.CalculatedSessionsPanelMaxHeight, Mode=OneWay}"
                  Style="{StaticResource SecondaryContentScrollViewerStyle}" CanContentScroll="False">
        <ui:SimpleStackPanel x:Name="SessionsStackPanel" Spacing="{Binding UIManager.CalculatedSessionsPanelSpacing}"
                             Orientation="{Binding UIManager.SessionsPanelOrientation}" />
    </ScrollViewer>
    
</UserControl>
